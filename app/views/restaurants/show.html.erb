<h1 data-controller="pocket">
  <%= @restaurant.title %>
  <div id="like-btn"
       data-action="click->pocket#add"
       data-pocket-target="btn"
       data-id="<%= @restaurant.id %>"
       class="like-btn <%= 'like-btn-favorited' if user_signed_in? && current_user.like?(@restaurant) %>">
  </div>
</h1>

<h3>留言</h3>
<%= form_for(@comment, url: restaurant_comments_path(@restaurant), remote: true) do |form| %>
  <div class="field">
    <%= form.label :content, '留言內容 for' %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit %>
<% end %>

<ul id="comment_area">
<% @comments.each do |comment| %>
  <li><%= comment.content %></li>
<% end %>
</ul>
